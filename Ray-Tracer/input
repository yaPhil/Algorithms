# Описание экрана
viewport
	origin 0 0 0		# Положение глаза наблюдателя
        topleft 2 -2 1		# Верхний-левый угол экрана
        bottomleft 2 -2 -1	# Нижний-левый угол экрана
        topright 2 2 1		# Верхний-правый угол экрана
        resolution 699 699
endviewport

materials
    entry
        name red	# Имя
        color 255 10 10		# Цвет поверхности
        # Коэффициент прозрачности (1-непрозрачный)
        alpha 1
        reflect 0		# Коэффициент отражения
        refract 0		# Коэффициент преломления
    endentry

    entry
        name blue
        color 10 10 255
        alpha 0.1
        reflect 0
        refract 1.2
    endentry

    entry
        name green
        color 10 255 10
        alpha 1
        reflect 0
        refract 0
    endentry
    entry
        name brown
        color 125 72 24
        alpha 1
        reflect 0
        refract 0
    endentry
    entry
        name lagun
        color 49 175 211
        alpha 1
        reflect 0
        refract 0
    endentry
endmaterials

# Описание освещения сцены
lights
        # Описание нормировочных коэффициентов
        reference
                # Мощность эталонного источника
                power 1
                # Расстояние от него до эталонной плоскости
                distance 1
        endreference
        # Описание одного источника света
        point
                # Координаты
                coords 3 1 1
                # Мощность
                power 3
        endpoint
        point
            coords 6 0 5
            power 6
        endpoint
endlights



# Описание примитивов
geometry
        sphere
                coords 5 0 0
                radius 1
                material blue
        endsphere
        triangle
            vertex 7 0 -0.5
            vertex 7 1 -0.5
            vertex 7 0.5 0.5
            material green
        endtriangle
        #triangle
        #        vertex 4 -1 1
        #        vertex 4 1 1
        #        vertex 4.7 0.2 -2
        #        material red
        #endtriangle

        #sphere
        #    coords 5 1 0
        #    radius 1.25
        #    material green
        #endsphere
        triangle
            vertex 40 -20 -1.3
            vertex 40 20 -1.3
            vertex -20 0 -1.3
            material brown
        endtriangle
        triangle
            vertex 20 -20 -1.3
            vertex 33 20 -1.3
            vertex 20 0 40
            material lagun
        endtriangle
        #triangle
        #    vertex 4 -1 0
        #    vertex 4 1 0
        #    vertex 2 0 1
        #    material red
        #endtriangle
endgeometry


