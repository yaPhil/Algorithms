# Описание экрана
viewport
        origin 0 0 0		# Положение глаза наблюдателя
        topleft 1 -2 1		# Верхний-левый угол экрана
        bottomleft 1 -2 -1	# Нижний-левый угол экрана
        topright 1 2 1		# Верхний-правый угол экрана
        resolution 699 699
endviewport

materials
    entry
        name red	# Имя
        color 255 10 10		# Цвет поверхности
        # Коэффициент прозрачности (1-непрозрачный)
        alpha 1
        reflect 0		# Коэффициент отражения
        refract 1		# Коэффициент преломления
    endentry

    entry
        name blue
        color 10 10 255
        alpha 0.3
        reflect 0.0
        refract 0.7
    endentry

    entry
        name green
        color 10 255 10
        alpha 1
        reflect 0.8
        refract 0
    endentry
    entry
        name brown
        color 125 72 24
        alpha 1
        reflect 0
        refract 0
    endentry
    entry
        name lagun
        color 49 175 211
        alpha 1
        reflect 0.8
        refract 0
    endentry
    entry
        name white
        color 250 250 250
        alpha 1
        reflect 0.0
        refract 1.0
    endentry
    entry
        name gray
        color 160 160 160
        alpha 1
        reflect 0.0
        refract 1.0
    endentry
endmaterials

